@model DesafioFINAL.Models.LogProdutos

@{
    ViewData["Title"] = "Cadastrando";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar</h1>

<h4>Nova ação do usuário</h4>
<hr class="mb-2" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="EmailUsuario" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="EmailUsuario" class="control-label"></label>
                <span asp-validation-for="EmailUsuario" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <select asp-for="IdProduto" class ="form-control" autocomplete="username" aria-required="true" asp-items="ViewBag.IdProduto"></select>
                <label asp-for="IdProduto" class="control-label"></label>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="AcaoLog" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="AcaoLog" class="control-label"></label>
                <span asp-validation-for="AcaoLog" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="DataLog" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="DataLog" class="control-label"></label>
                <span asp-validation-for="DataLog" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Cadastrar" class="w-100 btn btn-lg btn-outline-primary" />
            </div>
        </form>
        <div class="mt-2">
            <a class="w-100 btn btn-lg btn-outline-dark" asp-action="Index">Voltar para a lista</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
