@page
@model RegisterModel
@{
    ViewData["Title"] = "Cadastro de usuário";
}

<section class="container">
    <section>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="pt-3">Cadastre um novo usuário.</h2>
            <hr class="mb-2"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <div class="row g-2">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.Nome" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Nome"></label>
                        <span asp-validation-for="Input.Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.Sobrenome" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Sobrenome"></label>
                        <span asp-validation-for="Input.Sobrenome" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row g-2 pt-2">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <select class="form-select" asp-for="Input.TipoUsuario">
                            <option selected> Selecione um nível de acesso </option>
                            <option value="Administrador">Administrador</option>
                            <option value="Funcionário">Funcionário</option>
                            </select>
                        <label asp-for="Input.TipoUsuario"></label>
                        <span asp-validation-for="Input.TipoUsuario" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row g-2 pt-2">
                <div class="col-md-3">
                    <div class="form-floating">
                        <input asp-for="Input.CEP" class="form-control" autocomplete="username" aria-required="true" id="cep" onblur="pesquisacep(this.value);"/>
                        <label asp-for="Input.CEP"></label>
                        <span asp-validation-for="Input.CEP" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.Endereco" class="form-control" autocomplete="username" aria-required="true"  id="endereco"/>
                        <label asp-for="Input.Endereco"></label>
                        <span asp-validation-for="Input.Endereco" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <input asp-for="Input.Numero" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Numero"></label>
                        <span asp-validation-for="Input.Numero" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row g-2 pt-2">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.Bairro" class="form-control" autocomplete="username" aria-required="true" id="bairro"/>
                        <label asp-for="Input.Bairro"></label>
                        <span asp-validation-for="Input.Bairro" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.Cidade" class="form-control" autocomplete="username" aria-required="true" id="cidade"/>
                        <label asp-for="Input.Cidade"></label>
                        <span asp-validation-for="Input.Cidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-floating">
                        <input asp-for="Input.Estado" class="form-control" autocomplete="username" aria-required="true" id="estado"/>
                        <label asp-for="Input.Estado"></label>
                        <span asp-validation-for="Input.Estado" class="text-danger"></span>
                    </div>
                </div>
            </div>                               
            <div class="row g-2 pt-2">
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-outline-primary mt-2">Cadastrar</button>
        </form>
        <div class="mt-2">
            <a class="w-100 btn btn-lg btn-outline-dark" asp-controller="Home" asp-action="Index">Voltar para a Home</a>
        </div>
    </section>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
